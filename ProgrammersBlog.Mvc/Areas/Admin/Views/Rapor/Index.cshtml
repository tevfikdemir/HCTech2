@using ProgrammersBlog.Shared.Utilities.Results.ComplexTypes
@model ProgrammersBlog.Entities.Dtos.PersonWorkListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Personel Sipariş ve Beden Bazında iş Listesi";
}
 

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Rapor" asp-action="Index">Personel Sipariş ve Beden Bazında iş Listesi</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>

    <div id="demo-output" style="margin-bottom: 1em;" class="chart-display"></div>

    


    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Personel Sipariş ve Beden Bazında iş Listesi 
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered display" id="ordersTable" style="width:100%" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sipariş</th>
                            <th>Personel</th>
                            <th>Operasyon</th>
                            <th>Yapılan Adet</th>
                            <th>Tarih</th>

                        </tr>
                    </thead>
                    <tfoot>
                    </tfoot>
                    <tbody>
                        @foreach (var order in Model.PersonWorks)
                        {
                            <tr name="@order.Id">
                                <td>@order.Id</td>
                                <td>@order.Orders.OrderName</td>
                                <td>@order.Persons.FirstName</td>

                                <td>@order.Operations.OperationName</td>
                                <td>@order.Quantity</td>
                                <td>@order.CreateDate</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>
}
@section Scripts
{
    <script src="~/AdminLTE/js/raporIndex.js" type="application/ecmascript"></script>

    
   
   
}
