@model ProgrammersBlog.Entities.Dtos.OrderUpdateDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-edit"></span> @Model.OrderName Adlı Sipariş Düzenleniyor...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="form-order-update">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="OrderNumber"></label>
                        <input class="form-control" asp-for="OrderNumber" />
                        <span class="text-danger" asp-validation-for="OrderNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderType"></label>
                        <input class="form-control" asp-for="OrderType" />
                        <span class="text-danger" asp-validation-for="OrderType"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderName"></label>
                        <input class="form-control" asp-for="OrderName" />
                        <span class="text-danger" asp-validation-for="OrderName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderQuantity"></label>
                        <input class="form-control" asp-for="OrderQuantity" />
                        <span class="text-danger" asp-validation-for="OrderQuantity"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DayTarget"></label>
                        <input class="form-control" asp-for="DayTarget" />
                        <span class="text-danger" asp-validation-for="DayTarget"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
